<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:background="@color/transparent" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingBottom="6dip" android:paddingTop="6dip" android:paddingLeft="4dip" android:paddingRight="4dip">
	<View android:background="@color/ucalendar"
		android:layout_height="3dip" android:id="@+id/bar_month" android:layout_width="39dip"></View>
	<TextView android:text="LUN"
		android:id="@+id/day_text" style="@style/ucalendar"
		android:layout_width="39dip" android:layout_height="27dip"></TextView>
	<LinearLayout android:orientation="horizontal" android:layout_height="3dip" android:layout_width="39dip">
		<View android:layout_width="3dip" android:background="@color/ucalendar"
			android:layout_height="3dip" android:layout_marginRight="3dip"
			android:id="@+id/dot_monday"></View>
		<View android:layout_width="3dip" android:background="@color/ucalendar"
			android:layout_height="3dip" android:layout_marginRight="3dip"
			android:id="@+id/dot_tuesday"></View>
		<View android:layout_width="3dip" android:background="@color/ucalendar"
			android:layout_height="3dip" android:layout_marginRight="3dip"
			android:id="@+id/dot_wednesday"></View>
		<View android:layout_width="3dip" android:background="@color/ucalendar"
			android:layout_height="3dip" android:layout_marginRight="3dip"
			android:id="@+id/dot_thursday"></View>
		<View android:layout_width="3dip" android:background="@color/ucalendar"
			android:layout_height="3dip" android:layout_marginRight="3dip"
			android:id="@+id/dot_friday"></View>
		<View android:layout_width="3dip" android:background="@color/ucalendar"
			android:layout_height="3dip" android:layout_marginRight="3dip"
			android:id="@+id/dot_saturday"></View>
		<View android:layout_width="3dip" android:background="@color/ucalendar"
			android:layout_height="3dip" android:id="@+id/dot_sunday"></View>
	</LinearLayout>
</LinearLayout>
