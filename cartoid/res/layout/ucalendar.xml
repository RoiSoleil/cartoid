<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_gravity="center" android:padding="4dip" android:layout_height="45dip" android:layout_width="60dip" android:background="@color/transparent">
	<View android:background="@color/ucalendar"
		android:layout_height="4dip" android:id="@+id/bar_month" android:layout_width="52dip"></View>
	<TextView android:text="LUN"
		android:id="@+id/day_text" style="@style/ucalendar"
		android:layout_width="52dip" android:layout_height="29dip"></TextView>
	<LinearLayout android:orientation="horizontal" android:layout_height="4dip" android:layout_width="52dip">
		<View android:layout_width="4dip" android:background="@color/ucalendar"
			android:layout_height="4dip" android:layout_marginRight="4dip"
			android:id="@+id/dot_monday"></View>
		<View android:layout_width="4dip" android:background="@color/ucalendar"
			android:layout_height="4dip" android:layout_marginRight="4dip"
			android:id="@+id/dot_tuesday"></View>
		<View android:layout_width="4dip" android:background="@color/ucalendar"
			android:layout_height="4dip" android:layout_marginRight="4dip"
			android:id="@+id/dot_wednesday"></View>
		<View android:layout_width="4dip" android:background="@color/ucalendar"
			android:layout_height="4dip" android:layout_marginRight="4dip"
			android:id="@+id/dot_thursday"></View>
		<View android:layout_width="4dip" android:background="@color/ucalendar"
			android:layout_height="4dip" android:layout_marginRight="4dip"
			android:id="@+id/dot_friday"></View>
		<View android:layout_width="4dip" android:background="@color/ucalendar"
			android:layout_height="4dip" android:layout_marginRight="4dip"
			android:id="@+id/dot_saturday"></View>
		<View android:layout_width="4dip" android:background="@color/ucalendar"
			android:layout_height="4dip" android:id="@+id/dot_sunday"></View>
	</LinearLayout>
</LinearLayout>
