<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:padding="10dip">

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="30dip">
		<ImageView android:layout_height="fill_parent"
			android:layout_width="10dip" android:src="@drawable/hw_hdr_left"></ImageView>
		<LinearLayout android:layout_height="fill_parent"
			android:background="@drawable/hw_hdr_middle" android:layout_width="fill_parent"
			android:orientation="horizontal" android:gravity="center_vertical">
			<TextView android:id="@+id/hw_hdr_title"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		</LinearLayout>
		<ImageView android:layout_height="fill_parent"
			android:layout_width="10dip" android:src="@drawable/hw_hdr_right"
			android:layout_marginLeft="-10dip"></ImageView>
		<ImageButton android:layout_height="fill_parent"
			android:layout_width="30dip" android:src="@drawable/hw_hdr_next"
			android:background="@drawable/button_image"
			android:layout_marginLeft="-50dip" android:clickable="true"
			android:id="@+id/hw_hdr_next"></ImageButton>
		<ImageButton android:layout_height="fill_parent"
			android:layout_width="30dip" android:src="@drawable/hw_hdr_prev"
			android:background="@drawable/button_image"
			android:layout_marginLeft="-70dip" android:clickable="true"
			android:id="@+id/hw_hdr_prev"></ImageButton>

	</LinearLayout>

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<ImageView android:layout_height="fill_parent"
			android:layout_width="10dip" android:background="@drawable/hw_ct_left"></ImageView>
			<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="vertical">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:id="@+id/hw_ct" android:padding="5dip"></LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:id="@+id/hw_bt" android:gravity="center" android:padding="5dip"></LinearLayout>
		</LinearLayout>
		<ImageView android:layout_height="fill_parent"
			android:layout_width="10dip" android:layout_marginLeft="-10dip"
			android:background="@drawable/hw_ct_right"></ImageView>
	</LinearLayout>

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="5dip">
		<ImageView android:layout_height="fill_parent"
			android:layout_width="10dip" android:src="@drawable/hw_ftr_left"></ImageView>
		<LinearLayout android:layout_height="fill_parent"
			android:background="@drawable/hw_ftr_middle" android:layout_width="fill_parent"
			android:orientation="horizontal" android:gravity="center_vertical">
		</LinearLayout>
		<ImageView android:layout_height="fill_parent"
			android:layout_width="10dip" android:layout_marginLeft="-10dip"
			android:src="@drawable/hw_ftr_right"></ImageView>
	</LinearLayout>
</LinearLayout>
